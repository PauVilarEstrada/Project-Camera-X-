<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/captureBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Botón para hacer foto -->
        <ImageButton
            android:id="@+id/rotateCameraButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@android:drawable/ic_popup_sync" />
    </androidx.camera.view.PreviewView>

    <!-- Barra de captura (foto y video) -->
    <LinearLayout
        android:id="@+id/captureBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Miniatura de la galería -->

        <!-- Espacio en blanco entre la miniatura de la galería y el botón para hacer imagen -->

        <ImageView
            android:id="@+id/previewGallery"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />

        <Space
            android:id="@+id/spaceBetweenGalleryAndCapture"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Botón para hacer foto -->
        <ImageButton
            android:id="@+id/image_capture_button"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/spaceBetweenGalleryAndCapture"
            tools:src="@android:drawable/ic_menu_camera" />

        <!-- Espacio en blanco entre el botón para hacer imagen y el botón para hacer video -->

        <Space
            android:id="@+id/spaceBetweenCaptureAndVideo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Botón para hacer video -->
        <ImageButton
            android:id="@+id/videoCaptureButton"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_capture_button"
            tools:src="@android:drawable/presence_video_busy" />
    </LinearLayout>

    <!-- Botón para girar la cámara -->

</androidx.constraintlayout.widget.ConstraintLayout>
